{
  "name": "admin-scaffolds",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "i": "pnpm install",
    "dev": "cross-env NODE_ENV=dev vite --mode dev",
    "dev:test": "cross-env NODE_ENV=test vite --mode test",
    "dev:prod": "cross-env NODE_ENV=production vite --mode production",
    "build:test": "cross-env NODE_ENV=test vite build --mode test && esno ./build/script/postBuild.ts && npm run deploy:test",
    "build:prod": "cross-env NODE_ENV=production vite build --mode production && esno ./build/script/postBuild.ts && npm run deploy:prod",
    "deploy:test": "cross-env NODE_ENV=test && node ./deploy/index.ts",
    "deploy:prod": "cross-env NODE_ENV=production && node ./deploy/index.ts",
    "npm:check": "pnpx npm-check-updates -u",
    "clean": "pnpx rimraf node_modules",
    "clean:cache": "pnpx rimraf node_modules/.cache",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --write src/",
    "ts:check": "pnpm vue-tsc --noEmit --skipLibCheck",
    "prepare": "husky install"
  },
  "dependencies": {
    "@micro-zoe/micro-app": "1.0.0-rc.5",
    "element-plus": "^2.7.4",
    "less": "^4.2.0",
    "pinia": "^2.1.7",
    "pinia-plugin-persistedstate": "^3.2.1",
    "vue": "^3.4.21",
    "vue-i18n": "^9.13.1",
    "vue-router": "^4.3.0",
    "xw-ui": "^1.0.99"
  },
  "devDependencies": {
    "@intlify/unplugin-vue-i18n": "^4.0.0",
    "@rushstack/eslint-patch": "^1.8.0",
    "@tsconfig/node20": "^20.1.4",
    "@types/node": "^20.12.5",
    "@vitejs/plugin-vue": "^5.0.4",
    "@vitejs/plugin-vue-jsx": "^3.1.0",
    "@vue/eslint-config-prettier": "^9.0.0",
    "@vue/eslint-config-typescript": "^13.0.0",
    "@vue/tsconfig": "^0.5.1",
    "autoprefixer": "^10.4.19",
    "chalk": "^5.3.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "eslint": "^8.57.0",
    "eslint-plugin-vue": "^9.23.0",
    "esno": "^4.7.0",
    "fs-extra": "^11.2.0",
    "js-cookie": "^3.0.5",
    "lodash-es": "^4.17.21",
    "npm-run-all2": "^6.1.2",
    "prettier": "^3.2.5",
    "rollup": "^4.18.0",
    "rollup-plugin-visualizer": "^5.12.0",
    "typescript": "~5.4.5",
    "unocss": "^0.60.4",
    "vite": "^5.2.12",
    "vite-plugin-eslint": "^1.8.1",
    "vite-plugin-mock": "^3.0.2",
    "vite-plugin-progress": "^0.0.7",
    "vite-plugin-style-import": "^2.0.0",
    "vite-plugin-vue-devtools": "^7.0.25",
    "vue-tsc": "^2.0.19"
  }
}